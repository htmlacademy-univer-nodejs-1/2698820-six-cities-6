{
  "name": "six-cities",
  "version": "4.0.0",
  "author": {
    "name": "Устинов Даниил"
  },
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:pretty": "npm run build && node ./dist/main.js --pretty",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "npm run build && node ./dist/cli-main.js",
    "mock:server": "json-server --watch mocks/mock-server-data.json --port 3123"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "chalk": "^5.3.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^16.4.7",
    "inversify": "^6.0.2",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "pino-pretty": "^13.0.0",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  }
}